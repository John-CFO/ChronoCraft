{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "lib": ["esnext"],
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "types": ["@react-native-async-storage/async-storage", "node"],
    "paths": {
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "rootDir": "./"
}
