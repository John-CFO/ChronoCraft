{
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs20",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npm --prefix \"functions\" run build"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 5001
    },
    "functions": {
      "port": 4001
    },
    "firestore": {
      "port": 8001
    },
    "ui": {
      "enabled": true,
      "port": 1001
    },
    "singleProjectMode": true
  }
}
